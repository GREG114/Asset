@model IEnumerable<LxGreg.Models.Stock>

@{
    ViewData["Title"] = "Index";
}

<h2>库存管理</h2>

<p>
    <a asp-controller="Orders" asp-action="Create" asp-route-take="false" class="btn btn-success">新增入库</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.item.store.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.unit.UnitName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.itemItemNumber)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.item.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.item.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentQuantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(c=>c.CurrentQuantity!=0))
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.item.store.StoreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unit.UnitName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.itemItemNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentQuantity)
            </td>
            <td>
                <a asp-controller="Orders" asp-action="Create" class="btn btn-success" asp-route-stockid="@item.id" asp-route-take="false">入库</a>
                <a asp-controller="Orders" asp-action="Create" class="btn btn-success" asp-route-stockid="@item.id" asp-route-take="true">领用</a>
            </td>
        </tr>
        }
    </tbody>
</table>
